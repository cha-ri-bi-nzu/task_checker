<h1>タスク一覧</h1>

<%= form_with(model: @tasks, local: true) do |f| %>
  <% if @tasks.errors.any? %>
    <div id="error_explanation">
      <h2><%= @tasks.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @tasks.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <table>
    <tr>
      <th>タスク</th>
      <th>終了期限</th>
      <th>進捗</th>
      <th colspan="3"></th>
    </tr>
    <div>
      <%= link_to "作成日新しい順", tasks_path(create_new_sort: "true") %> | 
      <%= link_to "終了期限近い順", tasks_path(time_limit_sort: "true") %>  
      <%= f.select :status, select_from_enum(Task, :status) %>  
      <%= f.submit "進捗絞り込み", tasks_path(status_choose: "true") %>
    </div>
    <% @tasks.each do |task| %>
      <tr>
        <td class="task_row"><%= task.name %></td>
        <td><%= l task.time_limit, format: :short %></td>
        <td class="task_status"><%= status_h[:"#{task.status}"] %></td>
        <td><%= link_to '詳細', task_path(task.id) %></td>
        <td><%= link_to '編集', edit_task_path(task.id) %></td>
        <td><%= link_to '削除', task_path(task.id), method: :delete, data: {confirm: '本当に削除しますか？'} %></td>
      </tr>
    <% end %>
  </table>
  <br>
  <%= link_to "新タスク登録", new_task_path %>
<% end %>
