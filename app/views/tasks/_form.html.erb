<%= form_with(model: @task, local: true, url: @url) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= @task.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= f.label :"タスク：" %>
    <%= f.text_field :name %>
    <br>
    <br>
    <%= f.label :"終了期限：" %>
    <%= f.datetime_field :time_limit %>
    <br>
    <br>
    <%= f.label :" 概要 ：" %>
    <%= f.text_area :content %>
  </div>
  <br>
  <br>
  <% if @task.id.present? %>
    <%= f.submit :"更新" %>
  <% else %>
    <%= f.submit :"登録" %>
  <% end %>
<% end %>
