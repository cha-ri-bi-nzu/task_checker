<%= form_with(model: @user, local: true) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= @user.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= f.label :"ユーザー名：" %>
    <%= f.text_field :name %>
    <br>
    <br>
    <%= f.label :"メールアドレス：" %>
    <%= f.email_field :email %>
    <br>
    <br>
    <%= f.label :"パスワード：" %>
    <%= f.password_field :password %>
    <br>
    <br>
    <%= f.label :"パスワード(確認用)：" %>
    <%= f.password_field :password_confirmation %>
    <% if logged_in? && current_user.admin == "管理者" && User.where(admin: true).count >= 2 %>
      <br>
      <br>
      <%= f.label :"管理者権限：" %>
      <%= f.select :admin, select_from_enum(User, :admin) %>
    <% end %>
  </div>
  <br>
  <br>
  <% if @user.id.present? %>
    <%= f.submit :"更新" %>
    <br>
    <%= link_to "プロフィールに戻る", user_path %>
  <% else %>
    <%= f.submit :"登録" %>
  <% end %>
<% end %>
